<% layout('/layouts/boilerplate') %> 

<h1>All Entries</h1>

<% if(!currentUser) { %>
    <p>Log in to see your entries.</p>
<% } %> 

<% let counter=0 %>
<% for (let entry of entries) { %> 
    <% if (currentUser && entry.author._id.equals(currentUser._id)) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= entry.date %></h5>
                        <h5 class="card-title"><%= entry.subject %></h5>
                        <p class="card-text badge rounded-pill bg-primary"><%= entry.tag %></p>
                        <a href="entries/<%=entry._id%>" class="btn btn-primary">View <%=entry.subject%> </a>
                    </div>
                </div>
            </div>
        </div>
        <% counter++ %> 
    <% } %> 

<% } %>
<% if (currentUser && counter == 0) { %>
    <p>You have no entries.</p> 
<% } %>  




